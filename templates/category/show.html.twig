{% extends 'base.html.twig' %}

{% block album %}{% endblock %}

{% block content %}
    <section class="container ">
        <div class="row justify-content-center ">
            <div class="col-md-10 ">
                <div class="card shadow rounded mb-5 ">
                    <div class="text-white rounded">
                        <div class="row justify-content-center mb-3">
                            <div class="card-body">
                                <p class="card-text text-dark text-uppercase">{{ category.name }}</p>
                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="row">
                                        <div class="col">
                                            <div class="btn-group m-2 text-center">

                                                <a href="{{ path('app_category_edit', {'slug': category.slug }) }}"
                                                   class="btn btn-sm btn-outline-warning border border-info border-3"><img
                                                            src="{{ asset('assets/images/logoEdit.png') }}" height="18px"
                                                            alt="Modifier category"></a>

                                                <a href="{{ path('app_category_delete', {'slug': category.slug }) }}"
                                                   class="btn btn-sm btn-outline-warning border border-info border-3"><img
                                                            src="{{ asset('assets/images/logoDelete.png') }}" height="18px"
                                                            alt="Supprimer category"></a>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center m-3">
                <a href="{{ path('app_category') }}"
                   class="btn btn-sm btn-outline-warning border border-info border-3"><img
                            src="{{ asset('assets/images/logoReturn.png') }}" height="18px"
                            alt="Return"></a>
            </div>
        </div>
        </div>
        </div>

    </section>





{% endblock %}
