{% extends 'base.html.twig' %}

{% block album %}{% endblock %}

{% block content %}

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-5">
        {% for category in categories  %}
            <div class="col">
                <div class="card shadow-sm">

                    <div class="card-body">
                        <p class="card-text">{{ category.id}}</p>
                        <p class="card-text">{{ category.name }}</p>

                        <div class="d-flex justify-content-center align-items-center">
                            <div class="btn-group text-center">
                                <a href="{{ path('app_category_show', {'slug': category.id }) }}">
                                    <img src="{{ asset('assets/images/logoView.png') }}"
                                         height="18px" alt="Voir trick"></a>

                                <a href="{{ path('app_category_edit', {'slug': category.slug }) }}"
                                   class="btn btn-sm btn-outline-secondary"><img
                                            src="{{ asset('assets/images/logoEdit.png') }}" height="18px"
                                            alt="Modifier trick"></a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end align-items-center mt-3">
                            <a href="{{ path('app_category') }}"
                               class="btn btn-sm btn-outline-secondary"><img
                                        src="{{ asset('assets/images/logoReturn.png') }}" height="18px"
                                        alt="Return"></a>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
