{% extends 'base.html.twig' %}

{% block album %}{% endblock %}
{% block title %}Les catégories{% endblock %}
{% block content %}

    <h1 class="text-dark text-center fw-bold">Les catégories</h1>
    <br>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-5">

        {% for category in categories  %}
            <div class="col">
                <div class="card shadow-sm">

                    <div class="card-body text-center text-uppercase text-primary">
                        <p class="card-text">{{ category.name}}</p>
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="btn-group text-center m-2  ">
                                    <a href="{{ path('app_category_edit', {'slug': category.slug }) }}"
                                       class="btn btn-sm btn-outline-warning border border-info border-3 text-dark fw-bold"><img
                                                src="{{ asset('assets/images/logoEdit.png') }}" height="18px"
                                                alt="Modifier category"></a>
                                <a href="{{ path('app_category_delete', {'slug': category.slug }) }}"
                                   class="btn btn-sm btn-outline-warning border border-info border-3 text-dark fw-bold"><img
                                            src="{{ asset('assets/images/logoDelete.png') }}" height="18px"
                                            alt="Modifier category"></a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
