{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Snowtrick{% endblock %}

{% block content %}
    <section class="d-flex  justify-content-end p-5 container" id="picture">
        <div class=" p-2 p-lg-5">

            <h1 class="text-white text-center m-2 h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe.</h1>

            {{ form_start(form) }}
            <div class="fw-bold mb-2">

                {{ form_row(form.new_password) }}
            </div>
            <div class="fw-bold text-center ">
                {{ form_end(form) }}
            </div>

        </div>

    </section>

{% endblock %}
