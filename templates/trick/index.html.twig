{% extends 'base.html.twig' %}

{% block album %}{% endblock %}

{% block content %}

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-5">
        {% for trick in tricks %}
            <div class="col">
                <div class="card shadow-sm">
                    {% if trick.images %}
                        <img src="{{ asset('/upload/tricks/images/'~ trick.firstImage) }}" alt="picture trick">
                    {% endif %}
                    <div class="card-body">
                        <p class="card-text">{{ trick.title}}</p>
                        <p class="card-text">{{ trick.slug }}</p>
                        <p class="card-text">{{ trick.description }}</p>


                        <div class="d-flex justify-content-center align-items-center">
                            <div class="btn-group text-center">
                                <a href="{{ path('app_trick_show', {'slug': trick.slug }) }}"
                                 >
                                    <img src="{{ asset('assets/images/logoView.png') }}"
                                         height="18px" alt="Voir trick"></a>
                                {% if is_granted('ROLE_USER') %}
                                    <a href="{{ path('app_trick_edit', {'slug': trick.slug }) }}"
                                       class="btn btn-sm btn-outline-secondary"><img
                                                src="{{ asset('assets/images/logoEdit.png') }}" height="18px"
                                                alt="Modifier trick"></a>

                                    <a href="{{ path('app_trick_delete', {'slug': trick.slug }) }}"
                                       class="btn btn-sm btn-outline-secondary"><img
                                                src="{{ asset('assets/images/logoDelete.png') }}" height="18px"
                                                alt="Supprimer trick"></a>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
