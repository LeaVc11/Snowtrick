{% extends 'base.html.twig' %}

{% block title %}Modifier votre commentaire{% endblock %}

{% block content %}
    <h1 class="text-dark text-center fw-bold">Modidier un commentaire</h1>
    <section class="container-fluid background-layout-stairs">
        <div class="row justify-content-center">
            <div class="col-md-8 ">


                <div class="card shadow-lg rounded my-5">

                    <div class="jumbotron vh-100card-img-top">

                        <div class="p-1 p-md-4 mb-2 text-white rounded">

                            <div class="row justify-content-center">

                                {{ form_start(form) }}
                                <div class="d-flex justify-content-center align-items-center mt-3">
                                </div>
                                <p class="text-dark fw-bold text-decoration-underline"> Message :</p>
                                {{ form_widget(form.message,{'attr':{ 'placeholder':'Description', 'class':'fw-bold mb-4', 'rows':8}}) }}
                                <br>

                                {{ form_end(form) }}

                                <div class="d-flex justify-content-center align-items-center mt-3">
                                    <div class="row">
{#                                        {% for trick in tricks %}#}
                                        <div class="col m-6">
                                            <a href="{#{{ path('app_trick_show', {'slug': trick.slug }) }}#}"
                                               class="btn btn-sm btn-outline-warning border border-info border-3"><img
                                                        src="{{ asset('assets/images/logoReturn.png') }}" height="18px"
                                                        alt="Return"></a>
                                        </div>
{#                                        {%endfor%}#}

                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>





{% endblock %}
