<h2 class="fw-bold text-center mb-4"> Commentaires</h2>
<section id="comment ">
    {# {{ pagination.getTotalItemCount}} #}

    <h5 class="text-center">Connectez-vous Ã  votre compte afin de laisser un commentaire</h5>

    <div class="d-flex justify-content-center align-items-center mt-3 ">
        <a href="{{ path('app_login') }}" class=" btn btn-sm btn-secondary border-3 text-white fw-bold text-center p-3">Connexion </a>
    </div>

    {% for comment in pagination %}
        {# {{comment.id}} #}

        <div class="timeline-panel-container ">

            <div class="timeline-panel m-3 ">
                <div class="row">
                    <div class="col-2">
                        <img src="{{ asset('assets/images/snowboarding.png') }}" class="logo"
                             alt="logo">

                    </div>
                    <div class="col-5">
                        <div class="timeline-heading">
                            <p class="timeline-heading text-decoration-none">{{ comment.user.username }}</p>
                        </div>

                        <div class="timeline-body">
                            <p class="timeline-heading text-decoration-none">{{ comment.message }}</p>
                            <div class="d-flex justify-content-end align-items-center mt-3">
                            </div>

                        </div>
                    </div>
                </div>
                <div class="timeline-body">
                    <div class="d-flex justify-content-end align-items-center mt-3">
                        <div class="row">
                            <div class="col">
                                <p class="text-dark text-decoration-none">{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }} </p>
                            </div>

                            <div class="col">
                                {% if is_granted('ROLE_USER') %}
                                    <div class="btn-group text-center m-2 text-uppercase ">
                                        <a href="{{ path('app_comment_edit', {'id': comment.id}) }}"
                                           class="btn btn-sm btn-outline-warning border border-info border-3 text-dark fw-bold">
                                            <img src="{{ asset('assets/images/logoEdit.png') }}"
                                                 height="18px"
                                                 alt="Edit comment"></a>
                                        <a href=" {{ path('app_comment_delete', {'id': comment.id}) }} "
                                           class="btn btn-sm btn-outline-warning border border-info border-3"><img
                                                    src="{{ asset('assets/images/logoDelete.png') }}"
                                                    height="18px"
                                                    alt="Delete comment"></a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="pagination mb-3">
        {{ knp_pagination_render(pagination) }}
    </div>
</section>